<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/welcome_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/welcome"
        />

    <ImageView
        android:layout_width="@dimen/welcome_icon_wd"
        android:layout_height="@dimen/welcome_icon_th"
        android:layout_marginTop="@dimen/welcome_icon_mt"
        android:src="@mipmap/welcome_icon"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/welcome_hint"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/welcome_hint_mb"
        />
</RelativeLayout>
