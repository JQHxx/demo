<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_title__ht"
    android:orientation="vertical"
    android:background="@color/main_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/base_title_iv_left"
            android:layout_width="@dimen/base_title_iv_left_wt"
            android:layout_height="@dimen/base_title_iv_left_ht"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_title_iv_left_ml"
            android:src="@mipmap/base_title_iv_left" />

        <TextView
            android:id="@+id/base_title_tv_center"
            android:layout_width="@dimen/base_title_tv_center_wt"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/base_title_tv_center_tc"
            android:textSize="@dimen/base_title_tv_center_ts" />

        <ImageView
            android:id="@+id/base_title_iv_note"
            android:layout_width="@dimen/base_title_iv_note_wd"
            android:layout_height="@dimen/base_title_iv_note_wd"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_title_iv_note_mr"
            android:layout_toLeftOf="@+id/base_title_iv_right"
            android:src="@mipmap/base_title_iv_note"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/base_title_iv_right"
            android:layout_width="@dimen/base_title_iv_right_wd"
            android:layout_height="@dimen/base_title_iv_right_ht"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_title_iv_right_mr"
            android:src="@mipmap/course_detail_no_collect"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/base_title_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_title_iv_right_mr"
            android:text="@string/base_title_tv_right_tx"
            android:textColor="@color/base_title_tv_center_tc"
            android:textSize="@dimen/base_title_tv_center_ts"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>
