<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_title__ht"
    android:background="@color/main_color"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/search_tv_search"
        android:text="@string/search_ht"
        style="@style/search_input_style" />

    <ImageView
        android:id="@+id/search_iv_msg"
        android:layout_width="@dimen/search_iv_msg_wd"
        android:layout_height="@dimen/search_iv_msg_wd"
        android:layout_marginLeft="@dimen/search_iv_msg_ml"
        android:layout_marginRight="@dimen/search_iv_msg_mr"
        android:src="@mipmap/search_msg_normal" />

</LinearLayout>
