<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/home_rambling_set_adapter_ll"
    android:paddingLeft="@dimen/home_rambling_set_adapter_pl"
    android:paddingRight="@dimen/home_rambling_set_adapter_pr"
    android:paddingTop="@dimen/home_rambling_set_adapter_pt">

    <ImageView
        android:id="@+id/home_rambling_set_adapter_iv_play"
        android:layout_width="@dimen/home_rambling_set_adapter_iv_play_wd"
        android:layout_height="@dimen/home_rambling_set_adapter_iv_play_ht"
        android:src="@mipmap/home_rambling_set_play" />

    <TextView
        android:id="@+id/home_rambling_set_adapter_tv_number"
        style="@style/common_tv_black_333333_ts_12"
        android:layout_marginLeft="@dimen/home_rambling_set_adapter_tv_number_ml"
        android:gravity="start"
        android:lines="1"
        android:text="2"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/home_rambling_set_adapter_tv_title"
        style="@style/common_tv_black_333333_ts_12"
        android:layout_marginLeft="@dimen/home_rambling_set_adapter_tv_title_ml"
        android:layout_weight="1"
        android:gravity="start"
        android:lines="1"
        android:text="2" />

    <ImageView
        android:id="@+id/home_rambling_set_adapter_iv_detail"
        android:layout_width="@dimen/home_rambling_set_adapter_iv_detail_wd"
        android:layout_height="@dimen/home_rambling_set_adapter_iv_detail_ht"
        android:src="@mipmap/home_rambling_set_detail" />
</LinearLayout>
