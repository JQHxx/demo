<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/special_class_ht"
    android:layout_marginBottom="@dimen/special_class_mb"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/special_class_iv_img"
        android:layout_width="@dimen/special_class_iv_img_wd"
        android:layout_height="@dimen/special_class_iv_img_ht" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/special_class_ll_ml"
        android:orientation="vertical">


        <TextView
            android:id="@+id/special_class_tv_title"
            style="@style/common_tv_black_333333_ts_15"
            android:lines="1"
            android:text="222" />

        <TextView
            android:id="@+id/special_class_tv_author"
            style="@style/common_tv_tc_66666_sz_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/special_class_tv_title"
            android:lines="1"
             />

        <TextView
            android:id="@+id/special_class_tv_time"
            style="@style/common_tv_gray_99999_ts_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/special_class_tv_sale_num"
            android:lines="1"
            android:layout_marginBottom="@dimen/special_class_tv_time_mb"
             />


        <wenran.com.baselibrary.base.widget.NoPaddingTv
            android:id="@+id/special_class_tv_sale_num"
            style="@style/common_tv_gray_99999_tsl_11"
            android:layout_alignBottom="@+id/special_class_tv_price"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:includeFontPadding="false"
             />

        <wenran.com.baselibrary.base.widget.NoPaddingTv
            android:id="@+id/special_class_tv_price"
            style="@style/common_tc_ff943d_ts_21"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-2dp"
            android:gravity="center"
            android:includeFontPadding="false"
             />
    </RelativeLayout>
</LinearLayout>
