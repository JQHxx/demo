<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_ll_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/standard_tv_white_ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/player_pb_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/standard_tv_white_ffffff"
            android:progressBackgroundTint="@color/common_tv_tc_yellow_ffa632" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/player_iv_cancel_ml"
                android:src="@mipmap/player_cancel" />


            <LinearLayout
                android:id="@+id/player_ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/player_ll_content_ml"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/player_iv_img"
                    android:layout_width="@dimen/player_iv_img_wd"
                    android:layout_height="@dimen/player_iv_img_ht" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/player_ll_title_ml"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/player_tv_color"
                        android:textSize="@dimen/common_tv_ts_14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/player_tv_current_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/player_tv_color"
                            android:textSize="@dimen/common_tv_ts_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="/"
                            android:visibility="gone"
                            android:textColor="@color/player_tv_color"
                            android:textSize="@dimen/common_tv_ts_12" />

                        <TextView
                            android:id="@+id/player_tv_total_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/player_tv_color"
                            android:textSize="@dimen/common_tv_ts_12" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/player_iv_fast_backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/player_iv_fast_backward_ml"
                android:src="@mipmap/player_fast_backward" />

            <ImageView
                android:id="@+id/player_iv_play_or_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/player_iv_play_or_pause_ml"
                android:layout_marginRight="@dimen/player_iv_play_or_pause_mr"
                android:src="@mipmap/player_play" />

            <ImageView
                android:id="@+id/player_iv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/player_iv_speed_mr"
                android:src="@mipmap/player_speed" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
